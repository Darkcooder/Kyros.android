<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/meet_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2F3F66"
    tools:context="ru.e_meet.e_meet.ru.e_meet.kyros.TaskActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/app_bar_modal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEEFF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_unknown"
                android:id="@+id/itemIcon"
                android:layout_weight="0.33" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="Неизвестная встреча"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemName"
                    android:textColor="#444444"
                    android:textSize="24sp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@mipmap/ic_people"
                        android:id="@+id/peopleIcon" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.15">

                        <TextView
                            android:text="Неизвестный человек"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/peopleName"
                            android:layout_weight="0.15"
                            android:textSize="20sp" />

                        <TextView
                            android:text="Местоположение неизвестно"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/itemDistance"
                            android:layout_weight="0.15" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:text="Описание"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemDescription"
            android:layout_weight="1"
            android:background="#EEEEFF"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Отменить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remove"
                android:layout_weight="1" />

            <Button
                android:text="Завершить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/complete"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
