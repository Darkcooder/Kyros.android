<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Для избранных"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/likedLabel"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:text="Загрузка ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/likedDistance"
            android:layout_weight="1"
            android:textAlignment="textEnd" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="0"
            android:id="@+id/likedStatus"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Для друзей"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friendsLabel"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:text=" Загрузка ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/friendsDistance"
            android:layout_weight="1"
            android:textAlignment="textEnd" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="0"
            android:id="@+id/friendStatus"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Для всех"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/publicLabel"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textAlignment="center" />

        <TextView
            android:text="Загрузка ..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/publicDistance"
            android:layout_weight="1"
            android:textAlignment="textEnd" />

        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="0"
            android:id="@+id/publicStatus"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:text="Готово"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/done"
        style="@style/Widget.AppCompat.Button.Colored" />
</LinearLayout>